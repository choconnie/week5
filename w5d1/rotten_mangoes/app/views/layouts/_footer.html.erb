<footer>
  <br><hr>
  <small>
    <% if current_user && current_user.admin %>
      Go to admin page: <%= link_to "Admin page", admin_users_path %>
    <% end %>
    <% if current_user %>
      Edit your profile (<%= link_to "Edit", edit_user_path(current_user.id) %>)
      Signed in as <%= current_user.full_name %> (<%= link_to "Log out", session_path("current"), method: :delete %>)
    <% else %>
      <%= link_to "Log In", new_session_path %> | <%= link_to "Sign Up", new_user_path %>
    <% end %>
  </small>
</footer>
